@{
  ViewData["Title"] = $"Details for message id:{@Model.MessageId}";
}

<h1>Details for @Model.MessageId</h1>

<p>User: @Model.UserName</p>
<p>Group: @Model.Group</p>
<p>Comment: @Model.Comment</p>
<p>Date posted: @Model.Date</p>

<p>@Html.ActionLink("Edit message", "Edit", new { id = @Model.MessageId }, new { @class="btn btn-outline-secondary"})</p>
<p>@Html.ActionLink("Create message", "Create", new { id = @Model.MessageId }, new { @class="btn btn-outline-secondary"})</p>
<p>@Html.ActionLink("Delete message", "Delete", new { id = @Model.MessageId }, new { @class="btn btn-outline-secondary"})</p>
<p>@Html.ActionLink("Return to all messages", "Index")</p>